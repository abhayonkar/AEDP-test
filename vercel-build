#!/bin/bash

# Exit immediately if a command exits with a non-zero status.
set -e

# Log a message
echo "--- Running Django Migrations ---"

# Run the migrate command to create all database tables
python3.12 manage.py migrate

# Log another message
echo "--- Creating Superuser ---"

# Create a superuser non-interactively.
# This script checks if the user 'admin' already exists before trying to create it.
# This prevents errors on subsequent deployments.
cat <<EOF | python3.12 manage.py shell
import os
from django.contrib.auth import get_user_model

User = get_user_model()

if not User.objects.filter(username='admin').exists():
    User.objects.create_superuser('admin', 'admin@gmail.com', 'admin@123')
    print('Superuser "admin" created.')
else:
    print('Superuser "admin" already exists.')

EOF

# Log another message
echo "--- Collecting Django Static Files ---"

# Run the collectstatic command.
python3.12 manage.py collectstatic --noinput --clear
