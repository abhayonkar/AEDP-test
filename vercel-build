#!/bin/bash

# Exit immediately if a command exits with a non-zero status.
set -e

# Log a message to the Vercel build console
echo "--- Installing build dependencies for ReportLab (Comprehensive) ---"

# Use yum to install the C compiler, Python development headers,
# and all necessary graphics library development headers.
yum install -y gcc python3-devel freetype-devel libjpeg-devel libpng-devel zlib-devel

# Log another message
echo "--- Collecting Django Static Files ---"

# Run the collectstatic command.
python3.12 manage.py collectstatic --noinput --clear
